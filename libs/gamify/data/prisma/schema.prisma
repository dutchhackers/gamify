generator client {
    provider = "prisma-client-js"
    output   = "../generated"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id           Int           @id @default(autoincrement())
    createdAt    DateTime      @default(now())
    email        String        @unique
    firstName    String?
    lastName     String?
    applications Application[]
    uuid         String?       @unique
}

model Application {
    id                     Int      @id @default(autoincrement())
    createdAt              DateTime @default(now())
    name                   String   @unique
    description            String?
    applicationType        String
    externalApplicationUrl String?
    adminUser              User     @relation(fields: [adminUserId], references: [id])
    adminUserId            Int
    Badge                  Badge[]
}

model Badge {
    id                   Int         @id @default(autoincrement())
    createdAt            DateTime    @default(now())
    name                 String
    application          Application @relation(fields: [applicationId], references: [id])
    applicationId        Int
    iconPath             String?
    tier                 String
    repeatedlyObtainable Boolean
    totalScore           Int?
}
